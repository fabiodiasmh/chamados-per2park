spring.application.name=Per2park

#server.port=8085

# Permite que o Spring Boot entenda headers de proxy (X-Forwarded-*)
server.forward-headers-strategy=NATIVE

server.address=0.0.0.0

management.endpoints.web.exposure.include=health,info,metrics

# Desativa stack traces em respostas de erro evita vazamento
server.error.include-stacktrace=never


# Datasource - usa variaveis de ambiente se disponiveis ideal para Docker producao
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:postgresql://localhost:5432/postgres}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:postgres}
#spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:Marley2015}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:postgres}
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA Hibernate
spring.jpa.show-sql=${SPRING_JPA_SHOW_SQL:true}
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# Evite update em producao Use validate ou migrations FlywayLiquibase
spring.jpa.hibernate.ddl-auto=${SPRING_JPA_HIBERNATE_DDL_AUTO:update}
